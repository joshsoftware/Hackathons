<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shoptokapplication">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".utils.App"
        android:allowBackup="true"
        android:icon="@mipmap/app_logo_new"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_logo_new"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".activity.ETokenSuccessActivity"></activity>
        <activity android:name=".activity.UserTypeActivity" />
        <activity android:name=".activity.HomeOptionDetailsActivity" />
        <activity android:name=".activity.ShopListingActivity" />
        <activity android:name=".activity.CustomerOptionsActivity" />
        <activity android:name=".activity.CustomerBookingActivity" />
        <activity android:name=".activity.QRCodeScannerActivity" />
        <activity android:name=".activity.RegistrationActivity" />
        <activity android:name=".activity.ThanksScreenForQRActivity" />
        <activity android:name=".activity.HomeScreenActivity" />
        <activity
            android:name=".activity.SplashscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_splashscreen"
            android:theme="@style/FullscreenTheme">
                <intent-filter>
                    <action android:name="android.intent.action.MAIN" />

                    <category android:name="android.intent.category.LAUNCHER" />
                </intent-filter>

        </activity>
        <activity android:name=".activity.LoginActivity" />
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dimen_15dp">

    <TextView
        android:id="@+id/underDesigningTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="@dimen/dimen_20sp"
        android:visibility="gone"
        android:text="Under Designing..."/>


    <LinearLayout
        android:id="@+id/llDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="1.2">

        <TextView
            android:id="@+id/tvRefNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Sample Item A"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/dimen_14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTransactionAmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="500 Rs"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/dimen_20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llDetails"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Quantity"
        android:textColor="@color/colorBlack"
        android:visibility="visible"/>

    <Button

        android:id="@+id/cancelOrderButton"
        android:layout_width="@dimen/dimen_100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorWhite"
        android:text="Cancel"
        android:layout_below="@id/tvDateTime"
        android:visibility="gone"/>

    <View
        android:id="@+id/separatorView"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_below="@id/cancelOrderButton"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:background="@color/colorPrimaryDark"
        android:visibility="visible"/>


</RelativeLayout>